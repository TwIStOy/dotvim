{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "types": ["@typescript-to-lua/language-extensions", "lua-types/jit"],
    "strict": true,
    "noImplicitAny": true,
    "outDir": "lua/htts",
    "paths": {
      "@core/*": ["core/*"],
      "@conf/*": ["conf/*"],
      "@extra/*": ["extra/*"],
      "@glib/*": ["graphics/*"]
    },
    "baseUrl": "src/"
  },
  "tstl": {
    "luaTarget": "JIT",
    "sourceMapTraceback": true,
    "tstlVerbose": false,
    "noImplicitSelf": true,
    "luaPlugins": [
      {
        "name": "./tstl_plugins/fix-require-path.ts"
      }
    ],
    "noResolvePaths": [
      "which-key-raw-nvim",
      "ht.clib.cairo",
      "ht.utils.base64",
      "ffi",
      "lgi"
    ],
    "luaLibImport": "require-minimal",
    "luaBundle": "init.lua",
    "luaBundleEntry": "src/index.ts"
  },
  "include": ["src"]
}
