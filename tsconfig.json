{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "types": [
      "@typescript-to-lua/language-extensions",
      "lua-types/jit",
    ],
    "strict": true,
    "noImplicitAny": true,
    "outDir": "lua/tsgen",
  },
  "tstl": {
    "luaTarget": "JIT",
    "sourceMapTraceback": true,
    "tstlVerbose": true,
    "luaBundle": "bundle.lua",
    "luaBundleEntry": "src/main.ts",
    "noImplicitSelf": true,
    "luaPlugins": [{ "name": "./tstl_plugins/fix-require-path.ts" }],
    "noResolvePaths": [
      "which-key-raw-nvim",
    ]
  },
  "include": ["src"],
}
